/* components/my-alert/my-alert.wxss */

.toast-box {
        width: 100%;
        height: 100%;
        opacity: 1;
        position: fixed;
        top: 0px;
        left: 0px;
        z-index:2;
}
.border{
        border:1px red solid;
}

.toastbg {
        opacity: 0.2;
        background-color: black;
        position: absolute;
        width: 100%;
        min-height: 100vh;
}

.showToast {
        position: absolute;
        opacity: 1;
        width: 70%;
        margin-left: 15%;
        margin-top: 40%;
        /* background-color:#000; */
}

.toast-title {
        padding-left: 5%;
        background-color:#066595;
        border-top-left-radius: 5%;
        color: #fff;
        padding-top: 2vh;
        padding-bottom: 2vh;
        border-top-right-radius: 16rpx;
        border-top-left-radius: 16rpx;
}

.toast-main {
        padding-top: 2vh;
        padding-bottom: 2vh;
        background-color: #066595;
        text-align: center;
  
}

.toast-input {
        margin-left: 5%;
        margin-right: 5%;
        color:#fff;
        border: 1px solid rgb(54,186, 230);
        padding-left: 2vh;
        padding-right: 2vh;
        padding-top: 1vh;
        padding-bottom: 1vh;
}

.toast-button {
        display: flex;
}

.button1 {
        width: 50%;
}

.button2 {
        width: 50%;
}

.button1 button {
        width: 100%;
        background-color:#066595;
        color: rgb(54,186, 230);

        border-radius: 0px;
        border-bottom-left-radius: 16rpx;
}

.button2 button {
        width: 100%;
        background-color: #066595;
        color: rgb(54,186, 230);
        border-radius: 0px;
        border-bottom-right-radius: 16rpx;
}