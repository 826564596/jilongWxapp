@keyframes rotation {
        from {
                transform: rotate(0deg);
        }

        to {
                transform: rotate(360deg);
        }
}

.ones,
.twos,
.threes {
        /* position: relative; */
        height: 150rpx;
        width: 150rpx;
        position: relative;
        overflow: hidden;
        z-index: 999;


}

.ones::before,
.twos::before,
.threes::before {
        content: "";
        position: absolute;
        width: 150rpx;
        height: 150rpx;
        top: 0;
        left: 0;
        z-index: -1;
        /* background: url("http://3617j8p134.zicp.vip/deviceMonitor/circle2.png") no-repeat;
        background-size: 100% 100%; */
        animation: rotation 2s linear infinite;
}

.three-icon-size-img image {
        height: 150rpx;
        width: 150rpx;
}

.content {
        position: absolute;
}
.ones::before{
        background: url("http://3617j8p134.zicp.vip/deviceMonitor/circle2.png") no-repeat;
        background-size: 100% 100%;  
}
.twos::before {
        background: url("http://3617j8p134.zicp.vip/deviceMonitor/circle1.png") no-repeat;
        background-size: 100% 100%;
}

.threes::before {
        background: url("http://3617j8p134.zicp.vip/deviceMonitor/circle3.png") no-repeat;
        background-size: 100% 100%;
}

