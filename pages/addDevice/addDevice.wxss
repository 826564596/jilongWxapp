/* pages/addDevice/addDevice.wxss */
.base-information {
        width: 95%;
        margin: 0rpx auto;
        padding-top: 10rpx;
}
.list {
        /* border: 1rpx rgb(78, 232, 250) solid; */
        border-radius: 10rpx;
        background-color: rgba(44, 115, 177, 0.5);
        margin-bottom: 10rpx;
        min-height: 200rpx;
        color: #fff;
        padding: 30rpx;

}
.line {
        border-top: 1px rgb(78, 232, 250) solid;
        width: 100%;
        margin: 30rpx 0;
}
.test{
        width: 23%;
        border-right: 1px rgb(78, 232, 250) solid;
}
.button{
        position: fixed;
        color:#fff;
        width: 100%;
        bottom: 0;
        border-bottom-left-radius: 0%;
        border-bottom-right-radius: 0%;
        background-color:#0CACF6;
} 
.flex{
        display: flex;
        justify-content: space-between;
}
.inputs{
        margin-left:10rpx;
        width:73%;
        overflow: hidden;
        overflow-x: auto;
        white-space: nowrap;
}
.inputss{
        margin-left:10rpx;
        width:75%;
}
.dropdown{
        height: 40rpx;
        width: 40rpx;
        border-radius: 5px;
        border:1px rgb(78, 232, 250) solid;
}
.cuIcon-backs{
        height: 31px;
}
.cuIcon-backs:after {
	content: " ";
	display: inline-block;
	height: 10rpx;
	width: 10rpx;
	border-width: 0 4rpx 4rpx 0;
	border-color: rgb(78, 232, 250);
	border-style: solid;
	transform: matrix(-0.71, 0.71, 0.71, 0.71, 0, 0);
	/* position: absolute; */
    }
.widths{
        width: calc(100% - 40rpx);
        display: flex;
}
.image{
        height: 100%;
        height: 150rpx;
        width: 150rpx;
        border:1px #fff solid;
        border-radius: 3px;
}