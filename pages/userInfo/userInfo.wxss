/* pages/userInfo.wxss */
.base-information {
        width: 95%;
        margin: 0rpx auto;
        padding-top: 10rpx;
}
.icon-name{
        height: 300rpx;
        width: 100%;
        /* background-color: #fff; */
        background-color: rgba(44, 115, 177, 0.5);
        border-radius: 10rpx;
        display: flex;
        padding: 30rpx;
        flex-direction: column;
        justify-content: space-around;
        align-items: center;
}
.icon{
        height: 150rpx;
        width: 150rpx;
        /* border: 1px red solid; */
        border-radius: 10px;
        position: relative;

}
.circle-big{
        position: absolute;

        /* background-color: rgba(44, 115, 177); */
        height: 170rpx;
        width: 170rpx;
        border: 10rpx solid rgba(44, 115, 177, 1);
        border-radius: 10px;
        margin: auto;
        left: -10rpx;
        top: 0;
        bottom: 0;
        box-sizing: border-box;
}

.name{
        color:rgb(3, 47, 81);
}

.item-list{
        color:#fff;
        margin-top:10rpx;
        width: 100%;
        min-height: 100rpx;
        border-radius: 10rpx;
        /* border:1px red solid; */
        background-color: rgba(44, 115, 177, 0.5);
        
}
.line {
        border-top: 1px rgb(78, 232, 250) solid;
        width: 95%;
        margin: 0 2.5%;
}
.item-list-item{
        height: 100rpx;
        display: flex;
        align-items: center;
        justify-content: space-between;
        /* border:1px red solid; */
}
.item-list-item:active{
        background-color: rgba(44, 115, 177, 0.8);
}
.text-image{
        display: flex;
        align-items: center;
        margin-left: 20rpx;
}
.item-list-item image{
        display: inline-block;
        height: 40rpx;
        width: 40rpx;
        margin-right: 20rpx;
}
.cuIcon-back:after {
	content: " ";
	display: inline-block;
	height: 16rpx;
	width: 16rpx;
	border-width:0 0 4rpx 4rpx;
	border-color: rgb(78, 232, 250);
	border-style: solid;
	transform: matrix(-0.71, 0.71, 0.71, 0.71, 0, 0);
	/* position: absolute; */
    }
.unReadMessage{
        background-color: red;
        border-radius: 5px;
        height: 40rpx;
        line-height: 40rpx;
        font-size:12px;
        margin-left:10px;
        padding:0 10rpx;
}