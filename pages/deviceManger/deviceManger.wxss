/* pages/deviceManger/deviceManger.wxss */
.base-information {
        width: 95%;
        margin: 0rpx auto;
        padding-top: 10rpx;
}
.list {
        /* border: 1rpx rgb(78, 232, 250) solid; */
        border-radius: 10rpx;
        background-color: rgba(44, 115, 177, 0.5);
        margin-bottom: 10rpx;
        min-height: 200rpx;
        color: #fff;
        padding: 30rpx;

}

.line {
        border-top: 1px rgb(78, 232, 250) solid;
        width: 100%;
        margin: 10rpx 0;
}

.list .text {
        /* margin-left: 2.5%; */
        width: 100%;
        height: 50rpx;
        overflow: hidden;
        overflow-x: auto;
        white-space: nowrap;
}
.button{
        position: fixed;
        color:#fff;
        width: 100%;
        bottom: 0;
        border-bottom-left-radius: 0%;
        border-bottom-right-radius: 0%;
        background-color:#0CACF6;
} 